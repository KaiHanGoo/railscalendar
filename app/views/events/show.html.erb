<style>
    .jumbotron-custom {
      padding: 2rem;
      background-color: #f8f9fa;
      border-radius: 0.3rem;
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>

<br/>

<div class="container mt-4">
    <div class="jumbotron-custom">
      <h1 class="display-4"><%= @event.title %></h1>
      <p class="lead"><%= @event.date.strftime("%B %d, %Y") %></p>
      <hr class="my-4">
      <p><strong>Start Time:</strong> <%= @event.start_time.strftime("%I:%M %p") %></p>
      <p><strong>End Time:</strong> <%= @event.end_time.strftime("%I:%M %p") %></p>
      <%= link_to "Edit", edit_event_path(@event), class:"btn btn-primary btn-sm" %> 
      
      <%= link_to "Remove", @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>

      
      <%= link_to "Back", events_path, class:"btn btn-secondary btn-sm" %>     </div>
  </div>
