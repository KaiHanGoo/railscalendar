<style>
  .jumbotron-custom {
    padding: 2rem;
    background-color: #f8f9fa;
    border-radius: 0.3rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  }

  .table td:last-child {
    width: 150px; 
    padding-right: 1rem; 
  }

  .table {
    table-layout: fixed;
  }

  .table .btn {
    max-width: 100px; 
    text-overflow: ellipsis; 
    margin-right:15px;
  }
</style>


<br />

<div class="container mt-4">
  <div class="jumbotron-custom">
    <h1 class="display-4">Personal Events</h1>
    
    <hr class="my-4">
    <br/>
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>&nbsp&nbspActions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= link_to event.title, event, class: 'text-decoration-none' %></td>
            <td><%= event.date.strftime("%B %d, %Y") %></td>
            <td><%= event.start_time.strftime("%I:%M %p") if event.start_time %></td>
            <td><%= event.end_time.strftime("%I:%M %p") if event.end_time %></td>
            <td>
              <%= link_to "Edit", edit_event_path(event), class: "btn btn-outline-primary btn-sm ms-2" %>
              <%= link_to "Remove", event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br/>
    <hr class="my-4">
    
    <div class="text-center">
      <%= link_to "Create Event", new_event_path, class: "btn btn-primary" %>
      
    </div>
  </div>
</div>


